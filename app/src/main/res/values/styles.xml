<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="inactiveTab" parent="TextAppearance.AppCompat">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="activeTab" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ShapeAppearance.MyApp.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/green_primary</item>
        <item name="android:height">4dp</item>
        <item name="android:width">100dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MyApp.SmallComponent</item>
    </style>

    <style name="BottomModalStyleTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomModalStyle</item>
    </style>

    <style name="BottomModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>